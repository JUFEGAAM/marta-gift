    <script>
        document.getElementById("papelito").addEventListener("click", function() {
            const flores = document.getElementById("flores");
            const mensaje = document.getElementById("mensaje");

            // Hacemos visibles las flores
            flores.style.display = "block";
            setTimeout(() => {
                flores.style.opacity = "1"; // Aplicamos la transición para que se vea la imagen de forma suave
                flores.style.transform = "scale(1)"; // La hacemos aparecer gradualmente
            }, 100);

            // Mostramos el mensaje
            mensaje.style.display = "block";
            setTimeout(() => {
                mensaje.style.opacity = "1";
            }, 100); // Delay para que la animación de aparición sea suave
        });
    </script>
